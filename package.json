{
  "name": "storm-desktop",
  "productName": "storm-desktop",
  "version": "0.12",
  "description": "Storm is a minimal torrent client that support WebTorrent",
  "private": true,
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "cors": "^2.8.5",
    "create-torrent": "^4.7.0",
    "dayjs": "^1.10.5",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "ffmpeg-extract-frames": "^2.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "node-pre-gyp": "^0.17.0",
    "nodemon": "^2.0.12",
    "parse-torrent": "^9.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-circular-progressbar": "^2.0.4",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2",
    "styled-components": "^5.3.0",
    "web-vitals": "^1.0.1",
    "webtorrent": "^1.5.5",
    "webtorrent-hybrid": "4.1.0",
    "yarn": "^1.22.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "api": "nodemon run-api",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "deb86": "electron-forge make --arch ia32",
    "deb64": "electron-forge make --arch x64"
  },
  "main": "src/electron-starter.js",
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "^14.0.0-beta.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Storm",
        "icon": "public/icon.icns",
        "executableName": "storm-desktop"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Storm"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "Storm",
            "options": {
              "icon": "./public/icon.png"
            }
          },
          "platforms": [
            "linux"
          ]
        }
      ]
    }
  }
}
